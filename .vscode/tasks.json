{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Marp: Generate HTML Preview",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--html",
                "--output",
                "dev-presentation.html"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Generate HTML from presentation.md"
        },
        {
            "label": "Marp: Start Live Server",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--server",
                "--watch",
                "--port",
                "3000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Start Marp live server with auto-reload",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Marp: Watch & Generate HTML",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--html",
                "--output",
                "dev-presentation.html",
                "--watch"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Watch presentation.md and auto-generate HTML",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Marp: Export to PDF",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--pdf",
                "--output",
                "presentation.pdf"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Export presentation to PDF"
        },
        {
            "label": "Python: Serve Local Files",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "3001"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Start Python HTTP server on port 3001",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}