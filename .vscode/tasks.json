{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Marp: Build Modular Slides (HTML)",
            "type": "shell",
            "command": "./build-slides.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Build all slides from slides/ directory using modular approach"
        },
        {
            "label": "Marp: Build Modular Slides (HTML + PDF)",
            "type": "shell",
            "command": "./build-slides.sh",
            "args": ["--pdf"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Build all slides with PDF export using modular approach"
        },
        {
            "label": "Marp: Watch Modular Slides",
            "type": "shell",
            "command": "marp",
            "args": [
                "--input-dir", "./slides",
                "--output", "./dist",
                "--theme-set", "./themes",
                "--watch",
                "--preview"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Watch slides/ directory with live preview",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Marp: Legacy - Generate HTML Preview",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--html",
                "--output",
                "dev-presentation.html"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Generate HTML from monolithic presentation.md (legacy)"
        },
        {
            "label": "Marp: Legacy - Start Live Server",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--server",
                "--watch",
                "--port",
                "3000"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Start Marp live server with monolithic presentation.md (legacy)",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Marp: Legacy - Watch & Generate HTML",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--html",
                "--output",
                "dev-presentation.html",
                "--watch"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Watch monolithic presentation.md and auto-generate HTML (legacy)",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Marp: Legacy - Export to PDF",
            "type": "shell",
            "command": "marp",
            "args": [
                "presentation.md",
                "--pdf",
                "--output",
                "presentation.pdf"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Export monolithic presentation to PDF (legacy)"
        },
        {
            "label": "Python: Serve Local Files",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "3001"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Start Python HTTP server on port 3001",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}