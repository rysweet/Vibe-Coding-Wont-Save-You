{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Marp: Build Modular Slides (HTML)",
            "type": "shell",
            "command": "./build-slides.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Build all slides from slides/ directory using modular approach"
        },
        {
            "label": "Marp: Build Modular Slides (HTML + PDF)",
            "type": "shell",
            "command": "./build-slides.sh",
            "args": ["--pdf"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Build all slides with PDF export using modular approach"
        },
        {
            "label": "Marp: Watch Modular Slides",
            "type": "shell",
            "command": "marp",
            "args": [
                "--input-dir", "./slides",
                "--output", "./dist",
                "--theme-set", "./themes",
                "--watch",
                "--preview"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Watch slides/ directory with live preview",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Python: Serve Local Files",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "3001"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Start Python HTTP server on port 3001 to serve dist/ files",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}